<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="교내 쇼핑 앱"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/landed_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="아이디 입력하세요"
            android:lines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PW："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/landed_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="비밀번호 입력하세요"
            android:inputType="textPassword"
            android:password="true"
            android:lines="1" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/landed_user_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <RadioButton
            android:id="@+id/landed_user_type_admin"
            android:text="관리자"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <RadioButton
            android:id="@+id/landed_user_type_publisher"
            android:text="판매자" />

        <RadioButton
            android:id="@+id/landed_user_type_common"
            android:text="구매자" />

        <RadioButton
            android:id="@+id/landed_user_type_visitor"
            android:text="방문객" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/landed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="로그인"
            android:textSize="20dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/quit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#dc143c"
        android:layout_gravity="center_horizontal"
        android:text="나가기"
        android:textSize="20dp" />

</LinearLayout>